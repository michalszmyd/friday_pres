<% if !current_user.like_post?(@post) %>
  <%= link_to 'Like', 'javascript:void(0)', data: { post_id: @post.id, method: 'post' }, class: 'btn btn-primary like-button' %>
<% else %>
  <%= link_to 'Unlike', 'javascript:void(0)', data: { post_id: @post.id, method: 'delete' }, class: 'btn btn-info like-button' %>
<% end %>
